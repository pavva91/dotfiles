{
  // suggestions
  "suggest.noselect": true,
  "suggest.completionItemKindLabels": {
    "text": "t",
    "method": "m",
    "function": "f"
  },
  "snippets.priority": 1,
  "suggest.languageSourcePriority": 99,
  "coc.source.file.priority": 2,
  "coc.source.around.priority": 3,
  "coc.source.buffer.priority": 4,

  "hover.target": "float",

  // diagnostic
  "diagnostic.errorSign": "✗",
  "diagnostic.infoSign": "ℹ",
  "diagnostic.hintSign": "➤",
  "diagnostic.warningSign": "⚠",

  // codeLens
  // turn off codeLens stuff for improving performance
  "codeLens.enable": false,

  // go
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    }
  },

  // list
  "list.indicator": ">",
  "list.selectedSignText": "*",

  // autoformat
  "coc.preferences.formatOnSaveFiletypes": [
    "go",
    "java",
    "javascript",
    "typescripty",
    "python",
    "html",
    "yaml",
    "json",
    "css"
  ],

  // explorer
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": "labeling",
  "explorer.keyMappings.global": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit"
  },
  "java.errors.incompleteClasspath.severity": "ignore"
}
