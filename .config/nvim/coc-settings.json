{
	// suggestions
	"suggest.completionItemKindLabels": {
		"text": "t",
		"method": "m",
		"function": "f"
	},
	"snippets.priority": 1,
	"suggest.languageSourcePriority": 99,
	"coc.source.file.priority": 2,
	"coc.source.around.priority": 3,
	"coc.source.buffer.priority": 4,

	// diagnostic
	"diagnostic.errorSign": "✗",
	"diagnostic.infoSign": "ℹ",
	"diagnostic.hintSign": "➤",
	"diagnostic.warningSign": "⚠",

	// codeLens
	"codeLens.enable": true,

	// java
	"java.referencesCodeLens.enabled": true,
	"java.implementationsCodeLens.enabled": true,
	"java.completion.enabled": true,
	"java.foldingRange.enabled": true,
	"java.format.enabled": true,
	"java.completion.overwrite": true,
	"java.signatureHelp.enabled": true,
	"java.saveActions.organizeImports": true,

	// list
	"list.indicator": ">",
	"list.selectedSignText": "*",

	// autoformat
	"coc.preferences.formatOnSaveFiletypes": [
		"java",
		"javascript",
		"typescripty",
		"python",
		"html",
		"yaml",
		"json",
		"css"
	],
	// "java.jdt.ls.home": "/home/bob/.config/coc/extensions/coc-java-data/server",
	// explorer
	"explorer.width": 30,
	"explorer.icon.enableNerdfont":true,
	"explorer.previewAction.onHover": "labeling",
	"explorer.keyMappings.global": {
		"<cr>": ["expandable?", "expand", "open"],
		"v": "open:vsplit"
	}
}
