{
  // suggestions
  "suggest.noselect": true,
  "suggest.completionItemKindLabels": {
    "text": "t",
    "method": "m",
    "function": "f"
  },
  "snippets.priority": 1,
  "suggest.languageSourcePriority": 99,
  "coc.source.file.priority": 2,
  "coc.source.around.priority": 3,
  "coc.source.buffer.priority": 4,
  "hover.target": "float",
  // diagnostic
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic.errorSign": " ",
  "diagnostic.infoSign": " ",
  "diagnostic.hintSign": "",
  "diagnostic.warningSign": " ",
  // codeLens
  // turn off codeLens stuff for improving performance
  "codeLens.enable": true,
  // go
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": [
        "go.mod",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": [
        "go"
      ]
    }
    // "rust": {
    //   "command": "rust-analyzer",
    //   "filetypes": ["rust"],
    //   "rootPatterns": ["Cargo.toml"]
    // }
  },
  // java
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-17",
      "path": "/usr/lib/jvm/java-17-openjdk",
      "default": true
    },
    {
      "name": "JavaSE-11",
      "path": "/usr/lib/jvm/java-11-openjdk"
    },
    {
      "name": "JavaSE-1.8",
      "path": "/usr/lib/jvm/java-8-openjdk"
    }
  ],
  "java.enabled": true,
  "java.jdt.ls.home": "/home/bob/.config/coc/extensions/coc-java-data/server",
  "java.jdt.ls.vmargs": "-noverify -Xmx6G -XX:+UseG1GC -XX:+UseStringDeduplication",
  "java.trace.server": "verbose",
  // turn off codeLens stuff for improving performance
  "java.referencesCodeLens.enabled": false,
  "java.implementationsCodeLens.enabled": false,
  "java.completion.enabled": true,
  "java.completion.guessMethodArguments": true,
  "java.completion.overwrite": true,
  "java.format.enabled": true,
  "java.foldingRange.enabled": true,
  "java.codeGeneration.useBlocks": true,
  "java.codeGeneration.generateComments": true,
  "java.signatureHelp.enabled": true,
  "java.saveActions.organizeImports": true,
  "java.selectionRange.enabled": true,
  "java.format.settings.url": "/home/bob/.config/coc/extensions/node_modules/redhat.java/eclipse-formatter.xml",
  // list
  "list.indicator": ">",
  "list.selectedSignText": "*",
  // autoformat
  "coc.preferences.formatOnSaveFiletypes": [
    "go",
    "java",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "python",
    "html",
    "yaml",
    "json",
    "css",
    "rust"
  ],
  "coc.preferences.formatOnSave": true,
  // explorer
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": "labeling",
  "explorer.keyMappings.global": {
    "<cr>": [
      "expandable?",
      "expand",
      "open"
    ],
    "v": "open:vsplit"
  },
  "java.errors.incompleteClasspath.severity": "ignore",
  // Rust
  "rust-analyzer.server.path": "~/.cargo/bin/rust-analyzer",
  // "rust-analyzer.server.extraEnv": { "RUSTUP_TOOLCHAIN": "stable" }
  // JavaScript
  "coc.preferences.formatOnType": true,
  // Vue.js
  "volar.enable": true,
  "snippets.ultisnips.pythonPrompt": false
}
